{
  "AWSTemplateFormatVersion" : "2010-09-09",  
  "Description" : "Key Permission StackSet Deployment",
  "Resources" : {
	"ClientKeypolicy" : {
	  "Type" : "AWS::IAM::Policy",
	  "Properties" : {
        "PolicyName" : "AccountDKeyAceess",
        "PolicyDocument" : {
          "Version": "2012-10-17",
          "Statement" : [ {
            "Effect" : "Allow",
            "Action" : [
			   "kms:Encrypt",
               "kms:Decrypt",
               "kms:ReEncrypt*",
               "kms:GenerateDataKey*",
               "kms:DescribeKey"],
               "Resource" : "arn:aws:kms:us-east-1:514533009312:key/*"
          }]
      },
      "Users" : [{ "Ref" : "KeyUser" }]
	}
  },
  
  
   "KeyUsagePolicy": {
     "Type" : "AWS::IAM::Policy",
     "Properties" : {
       "PolicyName" : "UserKeyAccess",
       "PolicyDocument" : {
         "Version" : "2012-10-17",
         "Statement": [ {
         "Effect"   : "Allow",
         "Action": [
           "kms:Encrypt",
           "kms:Decrypt",
           "kms:ReEncrypt*",
           "kms:GenerateDataKey*",
           "kms:DescribeKey"
          ],
         "Resource" : "*"
         } ]
      },
      "Users" : [ { "Ref" : "KeyUser" } ]
     }
   },
  
   
     "KeyUser":{
     "Type": "AWS::IAM::User",
     "Properties":{
	    "UserName": "KeyUser"
       }
	 }
  }
}

